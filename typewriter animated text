import sys,time,os

message = "Computer: hello there nice to meet you.\nMe: nice to meet you\nComputer: goodbye."

def type(message):
	for char in message:
		sys.stdout.write(char)
		sys.stdout.flush()
		time.sleep(0.1)
		if char !="\n":
			time.sleep(0.1)
		else:
			time.sleep(1)

os.system("clear")

type(message)
